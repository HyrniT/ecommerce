{{!-- views/partials/admin/category.hbs --}}

<h3 class="mt-5">Edit category</h3>
<div class="container mt-1">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#each categories}}
            <tr>
                <td>{{name}}</td>
                <td>{{desc}}</td>
                <td><img src="{{image}}" alt="{{name}}" class="img-fluid" style="max-width: 100px;"></td>
                <td>
                    <button class="btn btn-primary" onclick="editCategory('{{id}}')">
                        <i class="fas fa-edit"></i>
                    </button>
                    <button class="btn btn-danger" onclick="deleteCategory('{{id}}')">
                        <i class="fas fa-trash"></i>
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>

<p class="mt-3">
    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="collapse"
        data-bs-target="#addCategoryFormContainer" aria-expanded="false" aria-controls="addCategoryFormContainer">
        Add new category
    </button>
</p>
<div class="container mt-3 collapse" id="addCategoryFormContainer">
    <div class="card card-body">
        <form id="addCategoryForm" method="post" action="/admin/add-category" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Name:</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>

            <div class="mb-3">
                <label for="desc" class="form-label">Description:</label>
                <input type="text" class="form-control" id="desc" name="desc">
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image:</label>
                <input type="file" class="form-control" id="image" name="image" accept="image/*">
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>
</div>